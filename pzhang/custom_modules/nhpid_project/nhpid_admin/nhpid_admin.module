  if (!$is_utf8) {
 
    $text =  mb_convert_encoding($text,  "UTF-8", $encoding);
    //$text =  mb_convert_encoding($text,  "UTF-8", 'auto');
  }
  //drupal_set_message(nhpid_api_dump($text, 'blue', TRUE));
  
  return $text;
}

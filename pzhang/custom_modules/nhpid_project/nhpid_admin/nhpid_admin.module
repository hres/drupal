  $encoding = mb_detect_encoding($text, "Windows-1252, Windows-1251,  ISO-8859-1, ASCII, UTF-8", TRUE);
  $is_utf8 = mb_check_encoding($text, 'UTF-8');

  //drupal_set_message("$text");

        break;
      case 'SRC':
        $field_reference_field = 'field_organism_part';
				$field = field_read_field($field_reference_field);
				$values = field_reference_potential_references($field);
        break;
			case 'DF':
        $field_reference_field = 'field_dosage_forms_form_groups';
				$field = field_read_field($field_reference_field);
				$values = field_reference_potential_references($field);
        break;
      Default:
        $values = array();
        break;
    }
    //drupal_set_message(nhpid_api_dump($values, 'purple', TRUE));
    foreach ($values as $key => $value) {
			$node_type = '';
			$code = '';
			$nid = null;
      $pattern = '/field_code node:(?P<nid>\d+)/';
			$matches = array();
      if (preg_match($pattern,$key, $matches)) {
        $nid=$matches['nid'];
			}
      $key = $type . '-' . $nid;
			/*
      $pattern = '/^(?P<node_type>.*: Code) - (?P<code>.*)$/';
			$matches = array();
      if (preg_match($pattern,$value, $matches)) {
        $node_type=$matches['node_type'];
        $code=$matches['code'];
			}
      //$value = $type . '-' . "$code ($node_type)";
			*/
      $value = $type . '-' . $value;
      $ret[$key] = $value;
    }
  }
  
  natsort($ret);
  return $ret;
}


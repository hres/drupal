function get_all_fields_of_node_type($node_type) {
  //$info = _content_type_info();
  $info = field_info_instances('node', $node_type);
  unset($info['body']);
  foreach ($info as $key => $item){
    $field_global_info = field_info_field($key);
    $info[$key]['active'] = $field_global_info['active'];
    $info[$key]['type'] = $field_global_info['type'];
    $info[$key]['module'] = $field_global_info['module'];
    $info[$key]['locked'] = $field_global_info['locked'];
    $info[$key]['cardinality'] = $field_global_info['cardinality'];
    $info[$key]['allowed_values'] = isset($field_global_info['settings']['allowed_values']) ? $field_global_info['settings']['allowed_values'] : null;
    $info[$key]['allowed_values_function'] = isset($field_global_info['settings']['allowed_values_function']) ? $field_global_info['settings']['allowed_values_function'] : null;
    $info[$key]['allowed_values_php'] = isset($field_global_info['settings']['allowed_values_php']) ? $field_global_info['settings']['allowed_values_php']: null;
  }
  
  return $info;
  /*
  if (isset($info['content types'][$node_type]['fields'])) {
    return $info['content types'][$node_type]['fields'];
  }
  */

  // If all else fails, return NULL.
  return NULL;
}


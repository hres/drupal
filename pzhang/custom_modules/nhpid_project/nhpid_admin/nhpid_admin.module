function readfile_recursion($root, &$files) {
  if (is_dir($root)) {
    //dump ($root);
    if ($dh = opendir($root)) {
        while (($file = readdir($dh)) !== FALSE) {
           if (is_dir("$root/$file")) {
            if (!(preg_match("/^\./", $file))) {
              //dump("folder: $file");
              readfile_recursion("$root/$file", $files);
            }
          }
          else {
            if (( str_replace('.xls', '', $file) !== $file)) {
              //dump($root . '/' . $file);
              array_push($files, drupal_realpath($root . '/' . $file));
            }
          }

        }
        closedir($dh);
    }
  }
}

